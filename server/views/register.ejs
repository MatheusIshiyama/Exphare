<%- include('partials/header') -%>
<div class="container">
    <div class="card register-card text-center border border-primary" style="background-color: #12111c;">
        <img src="/assets/exphareCard.jpg" class="card-img" alt="Exphare - Aprenda mais!" />
        <br>
        <h5 class="card-title text-white">Exphare - Aprenda mais!</h5>
        <div class="card-body">
            <form method="POST" action="/register">
            <div class="input-group">
                <span class="input-group-text">Id</span>
                <input type="text" disabled value="<%= id %>" class="form-control" id="id">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text">Usu√°rio</span>
                <input type="text" disabled value="<%= username %>" class="form-control" id="username">
                <span class="input-group-text">#</span>
                <input type="text" disabled value="<%= tag %>" class="form-control" id="tag">
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text">Senha</span>
                <input type="password" required placeholder="password" class="form-control" id="password"></input>
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-text">Repetir senha</span>
                <input type="password" required placeholder="password" class="form-control" id="check_password"></input>
            </div>
            <br>
                <button class="btn btn-primary" type="submit">
                    Registrar
                </button>
            </form>
        </div>
    </div>
</div>
<script src="/scripts/register.js"></script>
<%- include('partials/footer') -%>